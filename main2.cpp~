#include <iostream>
#include <opencv2/opencv.hpp>
#include <fstream>
#include <math.h>

using namespace std;
using namespace cv;

Mat createCosineImg(const int &rows, const int &cols, const float &freq, const float &theta) {

	Mat img = Mat::zeros(rows, cols, CV_32F);
	float rho;

	for (int x=0; x<img.cols; x++) {
		for(int y=0; y<img.rows; y++) {
			rho = x*cos(theta) - y*sin(theta);
			img.at<float>(y,x) = cos(2*CV_PI * rho);
		}
	}

	return img;

}

void sinusoidImg() {

	Mat img;
	int rows = 500;
	int cols = 500;
	int freq = 1; // [0, 500]
	int theta = 2;// [0, 100]

	img = createCosineImg(rows, cols, (float)freq/1e3, (float)(2*CV_PI*theta/100.0));
	imshow("img", scaleImage2_uchar(img));
}

int main() {


	sinusoidImg();

	return 0;
}
