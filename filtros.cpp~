#include <iostream>
#include <opencv2/opencv.hpp>

using namespace std;
using namespace cv;

int main() {

	Mat image;
	image = imread("lena.png", CV_LOAD_IMAGE_COLOR);   // Read the file

	Mat image2;
	image2 = imread("lena.png", CV_LOAD_IMAGE_COLOR);   // Read the file

	cout << "Digite:" << endl;
	cout << "1 - Mean" << endl;
	cout << "2 - Median" << endl;
	cout << "3 - Gaussian" << endl;
	cout << "4 - Bilateral" << endl;
	cout << "5 - Encerrar" << endl;
	int n;


        if(! image.data ) {
        	cout <<  "Could not open or find the image" << std::endl ;
        	return -1;
	}

	while(true) {

		cin >> n;
		
		if(n==1)
			blur(image, image2, Size(16,16));

		if(n==2)
			medianBlur(image, image2, 25);

		if(n==3)
			GaussianBlur(image, image2, Size(25,25), 1000);

		if(n==4)
			bilateralFilter(image, image2, 9, 500, 500);

		if(n==5)
			break;

		// Create a window for display.
		namedWindow( "Display window", WINDOW_AUTOSIZE );
		imshow( "Display window", image );  

		// Create a window for display.
		namedWindow( "Display window2", WINDOW_AUTOSIZE );
		imshow( "Display window2", image2 );  

		waitKey(0);
	}

	return 0;
}
